<!DOCTYPE html>
<html>
  <head>
    <title>Teacher's Pet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('science.png') %>
  </head>

  <body>
  <div class="navbar navbar-inverse" role="navigation">
      
    <div class="container-fluid">

      <ul class="nav navbar-nav">   
        <li><a href="<%= root_url %>">Home</a></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li><a href="<%= session[:user_id] ? user_path(User.find(session[:user_id])) : new_user_path %>">
          <%= session[:user_id] ? "#{User.find(session[:user_id]).username}'s Profile" : "Sign Up" %>
        </a></li>
        <li>
        <% if session[:user_id] %>
          <%= button_to "Sign out", signout_path, method: :delete %>
        <% else %>
          <%= link_to "Sign in", signin_path %>
        <% end %>
        </li>
      </ul>

    </div>
        
      
    </div>

    <%= yield %>
  </body>
</html>
