<h1>Sign Up</h1>



<%= form_with model: @user do |f| %>
    <% if @user.errors[:username].present? %>
      <h3><%= f.text_field :username, placeholder: "Must enter username" %></h3>
    <% else %>
      <h3><%= f.text_field :username, placeholder: "Name" %></h3>
    <% end %>
    <h3><%= f.password_field :password, placeholder: "Password" %></h3>
  <%= f.submit "Create Teacher" %>
<% end %>

<h2>OR</h2>

<%= link_to "Sign Up with Google", '/auth/google_oauth2', method: :post %>