<div class="container">  
    <div class="d-flex justify-content-center"> 
        <h1><%= @student.name %></h1>
    </div>
    <div class="d-flex justify-content-center"> 
        <h2>Grade: <%= @student.grade %></h2>
    </div>

    <div class="d-flex justify-content-center"> 
        <h3>Courses:</h3>
    </div>
    <div class="d-flex justify-content-center"> 
        <ul class="list-group">
        <% @student.courses.each do |course| %>
            <li class="list-group-item"><%= link_to course.name, course_path(course) %><br><%= course.description %></li>
        <% end %>
        </ul>
    </div>
    
    <div class="d-flex justify-content-center"> 
        <h3>Lessons:</h3> 
    </div>
    <div class="d-flex justify-content-center"> 
        <ul class="list-group">
        <% @student.lessons.each do |lesson| %>
            <li class="list-group-item"><%= link_to lesson.title, lesson_path(lesson) %><br><%= lesson.plan %></li>
        <% end %>
        </ul>
    </div>
</div>